<div class="container w-75">
  <div class="background-board py-3 px-5 my-4">
    <div class="d-flex align-items-center justify-content-between">
      <h4 class="h4-review mb-5">タグが"<%= @tag.name %>"のCoffee Review</h4>
    </div>
        <table class='table table-hover table-light-0 margin-y'>
      <thead>
        <tr>
          <th class="bg-brown">投稿日時</th>
          <th class="bg-brown">投稿者</th>
          <th class="bg-brown">商品名</th>
          <th class="bg-brown">ショップ名</th>
          <th class="bg-brown">公開/非公開</th>
        </tr>
      </thead>
      <tbody>
        <% @record_coffees.each do |record_coffee| %>
        <tr>
          <td><%= link_to record_coffee.created_at.strftime('%Y/%m/%d'), admin_record_coffee_path(record_coffee.id) %></td>
          <td><%= link_to record_coffee.user.name, admin_record_coffees_path(record_coffee.user) %></td>
          <td><%= record_coffee.item_name %></td>
          <td><%= record_coffee.shop_name %></td>
          <td>
            <% if record_coffee.release %>
              <span>公開</span>
            <% else %>
              <span>非公開</span>
            <% end %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= paginate @record_coffees %>
</div>