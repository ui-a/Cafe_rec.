<div class="container">
<h4 class="margin-y"><%= @user.name %>さんの会員詳細</h4>
<div class="row">
  <div class="col">
    <table class="table customer-table table-bordered table-light">
      <tbody>
        <tr>
          <th class="bg-brown">顧客ID</th>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <th class="bg-brown">氏名</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th class="bg-brown">メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <th class="bg-brown">会員ステータス</th>
          <td>
            <% if @user.is_deleted %>
              <strong class="text-danger">退会</strong>
            <% else %>
              <strong class="text-success">有効</strong>
            <% end %>
          </td>
        </tr>
      <tbody>
    </table>
    <div class="d-flex justify-content-around">
      <%= link_to "編集する", edit_admin_user_path(@user), class: "btn btn-success" %>
      <%= link_to "レビュー一覧を見る", admin_path, class: "btn btn-primary" %>
    </div>
	</div>
  </div>
</div>
</div>