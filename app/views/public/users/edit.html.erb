<div class='container px-3 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <%= render 'public/records/sidebar', record: @record %>
    </div>

    <div class='col-md-9 py-5'>
      <div class='background-record ml-2 py-3 px-5'>
        <h4 class="h4-create mb-4">ユーザー情報を編集する</h4>
          <%= render 'layouts/errors', obj: @user %>
          <%= form_with model: @user, url: users_setting_path, method: :patch, local:true do |f| %>
          <div class="form-group">
            <div class="d-flex flex-row mb-3">
              <div class="col-3">
                <%= f.label :name, 'ユーザー名' %>
              </div>
              <div class="col-6">
                <%= f.text_field :name, class: "form-control" %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="d-flex flex-row mb-3">
              <div class="col-3">
                <%= f.label :image, 'アイコン' %>
              </div>
              <div class="col-6">
                <%= f.file_field :profile_image, class: "form-control-file", accept: 'image/*' %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="d-flex flex-row mb-3">
              <div class="col-3">
                <%= f.label :email, 'メールアドレス'%>
              </div>
              <div class="col-6">
                <%= f.text_field :email, class: "form-control" %>
              </div>
            </div>
          </div>
          <div class="form-group">
                <%= f.submit "　変更を保存　", class: "btn btn-outline-success mx-auto my-3 d-block" %>
          </div>
          <% end %>
      </div>
    </div>
  </div>
</div>