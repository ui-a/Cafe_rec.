<div class="container" style="width: fit-content">
  <div class="sub_container w-75 py-4 px-5">

    <h2 class="text-center">Sign up</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-outline-success mt-1" %>
      </div>
      <% end %>

    <div class="row mt-5 mb-2">
      ログインはこちら
      <%= link_to 'Log in', new_user_session_path, class: "btn btn-outline-primary btn-sm mx-2 sign_in" %>
    </div>
    <div class="row">
      登録せずにお試しでご利用される方はこちら
      <%= link_to "Guest Login", users_guest_sign_in_path, class: "btn btn-outline-secondary btn-sm mx-2 sign_in", method: :post %>
    </div>
  </div>
</div>