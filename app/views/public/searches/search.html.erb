<div class='container px-3 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <%= render 'public/records/sidebar', record: @record %>
    </div>

    <div class='col-md-9 py-5'>
      <div class='background-record ml-2 py-3 px-5'>
        <div id="anchor-search"><h4 class='h4-search'>検索結果"<%= @range %>"</h4></div>
        <div class="mx-auto mt-5">
          <% if @range == "Coffee" %>
            <% if @record_searches.present? %>
              <% @record_searches.each do |record_coffee| %>
                <%= render 'public/record_coffees/index', record_coffee: record_coffee %>
              <% end %>
            <% else %>
              検索条件に当てはまるレビューはありません。
            <% end %>
          <% else %>
          <% if @record_searches.present? %>
            <% @record_searches.each do |record_tea_leafe| %>
              <%= render 'public/record_tea_leaves/index', record_tea_leafe: record_tea_leafe %>
            <% end %>
          <% else %>
            検索条件に当てはまるレビューはありません。
          <% end %>
        <% end %>
        </div>
        <%= paginate @record_searches %>
        <div class="d-flex justify-content-end">
          <a href="#aanchor-search">トップへ戻る▲</a>
        </div>
      </div>
    </div>
  </div>
</div>
