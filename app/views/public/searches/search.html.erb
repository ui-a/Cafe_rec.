<% if @range == "Coffee" %>
  <% if @coffee_searches.present? %>
    <% @coffee_searches.each do |record_coffee| %>
       <%= render 'public/record_coffees/index', record_coffee: record_coffee %>
    <% end %>
  <% else %>
    検索条件に当てはまるレビューはありません。
  <% end %>
<% else %>
  <% if @tea_searches.present? %>
    <% @tea_searches.each do |record_tea_leafe| %>
      <%= render 'public/records/tea_list', record_tea_leafe: record_tea_leafe %>
    <% end %>
  <% else %>
    検索条件に当てはまるレビューはありません。
  <% end %>
<% end %>