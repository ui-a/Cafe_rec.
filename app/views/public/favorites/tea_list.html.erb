<div class='container px-3 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <%= render 'public/records/sidebar', record: @record %>
    </div>

    <div class='col-md-9 py-5'>
      <div class='background-record ml-2 py-3 px-5'>
        <div id="anchor-tea-favorite"><h4 class='h4-favorite'>Favorite Tea List</h4></div>
        <div class="mx-auto mt-5">
          <% if @tea_favorite_list.present? %>
            <% @tea_favorite_list.each do |record_tea_leafe| %>
              <%= render 'public/record_tea_leaves/index', record_tea_leafe: record_tea_leafe %>
            <% end %>
          <% else %>
            <p>お気に入りした紅茶・お茶のレビューはありません</p>
          <% end %>
        </div>
        <div class="d-flex justify-content-end">
          <a href="#anchor-tea-favorite">トップへ戻る▲</a>
        </div>
      </div>
    </div>
  </div>
</div>
