    <div class="card mb-3" style="max-width: 700px;">
      <div class="card-header">
        <div id="favorite_buttons_<%= @record_tea_leafe.id %>" >
          <%= render 'public/favorites/tea_favorite', record_tea_leafe: @record_tea_leafe %>
        </div> 
        <%= record_tea_leafe.item_name %>
        <%= record_tea_leafe.user.name %>
        <%= record_tea_leafe.created_at.strftime('%Y/%m/%d') %>
      </div>
      <div class="row">
        <div class="col-lg-4">
          <p><%= image_tag record_tea_leafe.get_image(250,167) %></p>
          <%= render 'star_result', record_tea_leafe: @record_tea_leafe %>
        </div>
        <div class="col-lg-8">
          <div class="card-body">
            <h5 class="card-title"><%= record_tea_leafe.category.name %></h5>
            <p class="card-text"><%= record_tea_leafe.item_name %></p>
            <ul class="list-group list-group-flush border-0">
              <li class="list-group-item">
                <%= record_tea_leafe.brand_name %>
              </li>
              <li class="list-group-item">
                <%= record_tea_leafe.price.to_s(:delimited) %>円(税込)
              </li>
              <li class="list-group-item">
           　　   <% @tag_list.each do |list|%>
         　　　　     <i class="fa-sharp fa-solid fa-tag"></i>
            　　　　  <%=link_to list.name, search_tag_coffee_path(tag_id: list.id) %>
                <% end %>
          　　  </li>
              <li class="list-group-item">
                <%= record_tea_leafe.review %>
                <% if @record_tea_leafe.user == current_user %>
                  <%= link_to 'Edit', edit_record_tea_leafe_path(@record_tea_leafe), class: "btn btn-sm btn-success" %>
                  <%= link_to 'Destroy', @record_tea_leafe, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          <p>comment (<%= @record_tea_leafe.comments.count %>)</p>
        </li>
        <li class="list-group-item">
          <% @record_tea_leafe.comments.each do |comment| %>
            <%= comment.user.name %>
            <%= comment.comment %>
              <% if comment.user == current_user %>
                <%= link_to "削除", record_tea_leafe_comment_path(comment.record_tea_leafe, comment), method: :delete %>
              <% end %>
          <% end %>
          <%= render 'layouts/errors', obj: @comment %>
          <%= form_with model: [@record_tea_leafe, @comment] do |f| %>
            <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに", required: true %>
            <%= f.submit "送信する" %>
          <% end %>
        </li>
      </ul>
          </div>
        </div>
      </div>
    </div>
