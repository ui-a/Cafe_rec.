    <div class="card mb-3" style="max-width: 700px;">
      <div class="card-header">
        <div id="favorite_coffee_buttons_<%= @record_coffee.id %>" >
          <%= render 'public/favorites/coffee_favorite', record_coffee: @record_coffee %>
        </div>
        <%= record_coffee.item_name %>
        <%= record_coffee.user.name %>
        <%= record_coffee.created_at.strftime('%Y/%m/%d') %>
      </div>
      <div class="row">
        <div class="col-lg-4">
          <p><%= image_tag record_coffee.get_image(250,167) %></p>
          <%= render 'star_result', record_coffee: @record_coffee %>
        </div>
        <div class="col-lg-8">
          <div class="card-body">
            <h5 class="card-title"><%= record_coffee.category.name %></h5>
            <p class="card-text"><%= record_coffee.item_name %></p>
            <ul class="list-group list-group-flush border-0">
              <li class="list-group-item">
                <%= record_coffee.brand_name %>
              </li>
              <li class="list-group-item">
                <%= record_coffee.price.to_s(:delimited) %>円(税込)
              </li>
              <li class="list-group-item">
                <% @record_coffee_tags.each do |tag| %>
                <i class="fa-sharp fa-solid fa-tag"></i>
                <%= link_to tag.name, recordtag_search_path(tag_id: tag.id) %>
                <% end %>
          　　  </li>
              <li class="list-group-item">
                <%= record_coffee.review %>
                <% if @record_coffee.user == current_user %>
                  <%= link_to 'Edit', edit_record_coffee_path(@record_coffee), class: "btn btn-sm btn-success" %>
                  <%= link_to 'Destroy', @record_coffee, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          <p>comment (<%= @record_coffee.comments.count %>)</p>
        </li>
        <li class="list-group-item">
          <div id="coffee_comment">
          <%= render 'public/comments/coffee_comment', record_coffee: @record_coffee %>
          </div>
        </li>
      </ul>
          </div>
        </div>
      </div>
    </div>
