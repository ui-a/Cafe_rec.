<div class='container px-5 px-sm-0'>
  <%# render 'layouts/errors', obj: @record %>
  <div class='row'>
    <div class='col-md-3'>
      <%= render 'public/records/sidebar', record: @record %>
    </div>

    <div class='col-md-9'>
      <% @instances.each do |instance| %>
        <% if instance.class == "RecordCoffee" %>
          <%# record_coffeeの表示 %>
          <%= render 'public/record_coffees/frame', record_coffee: @record_coffee %>
        <% else %>
          <%# record_tea_leafeの表示 %>
          <%= render 'public/record_tea_leaves/frame', record_tea_leafe: @record_tea_leafe %>
        <% end %>
      <% end %>

    <div class="card mb-3" style="max-width: 600px;">
      <div class="row">
        <div class="col-lg-4">
          <%= image_tag 'no_image.jpg', size: "250x167", alt: '...' %>
        </div>
        <div class="col-lg-8">
          <div class="card-body">
            <h5 class="card-title">Card title</h5>
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
            <a href="#" class="btn btn-primary">Go somewhere</a>
          </div>
        </div>
      </div>
    </div>
    </div>
  </div>
</div>
