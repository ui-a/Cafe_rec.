<div class="card my-5 px-2 py-2" style="width: 12rem;">
  <div onclick="obj=document.getElementById('open').style; obj.display=(obj.display=='none')?'block':'none';">
    <a style="cursor:pointer;">▼ Search</a>
 </div>
<!--// 折り畳み展開ポインタ -->
<!-- 折り畳まれ部分 -->
  <div id="open" style="display:none;clear:both;">
  <!--ここの部分が折りたたまれる＆展開される部分になります。自由に記述してください。-->
    <%= form_with url: search_path, method: :get, local: true do |f| %>
      <%= f.select :range, options_for_select([['Coffee'], [Tea]]) %>
      <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["部分一致","partial_match"]]) %>
      <%= f.text_field :word %>
      <%= f.submit "検索" %>
    <% end %>
  </div>
</div>
